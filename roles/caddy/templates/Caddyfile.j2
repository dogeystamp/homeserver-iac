{
	{% if email is not none %}
	email {{ email }}
	{% endif %}
}

{% if "website" in group_names %}
http://www.{{ domain }} {
	root * {{ website_path }}
	file_server
}
{% endif %}

{% if groups["gitea"] | length > 0 %}
http://{{ gitea_domain }} {
	reverse_proxy {{ groups["gitea"][0] }}:3000
}
{% endif %}

{% if groups["navidrome"] | length > 0 %}
http://{{ navidrome_domain }} {
	reverse_proxy {{ groups["navidrome"][0] }}:4533
}
{% endif %}
